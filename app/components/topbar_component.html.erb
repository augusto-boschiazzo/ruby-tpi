<header class="flex fixed top-0 w-full justify-between items-center px-5 py-3 z-10">
    <%= link_to "Store", root_path, class: "text-2xl font-bold text-[var(--accent)]" %>

     <nav class="flex items-center space-x-6">
        <% if helpers.user_signed_in? %>
            <%= link_to "Inicio", root_path, class: "text-blue-600 hover:underline" %>
            <%= link_to "Productos", products_path, class: "text-blue-600 hover:underline" %>
            <%= link_to "Ventas", sales_path, class: "text-blue-600 hover:underline" %>

            <div class="relative group">
                <button class="text-blue-600 hover:underline focus:outline-none">
                    Reportes â–¼
                </button>
                <div class="absolute hidden group-hover:block group-focus-within:block bg-white border border-gray-200 rounded-md shadow-lg">
                    <%= link_to "Ventas por Mes", sales_summary_reports_path,
                        class: "block px-4 py-2 hover:bg-gray-100" %>
                    <%= link_to "Top Productos", top_products_reports_path,
                        class: "block px-4 py-2 hover:bg-gray-100" %>
                    <%= link_to "Ventas por Empleado", sales_by_employee_reports_path,
                        class: "block px-4 py-2 hover:bg-gray-100" %>
                </div>
            </div>


            <span>Signed in as <%= @user.email %></span>
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "text-[var(--accent)] cursor-pointer" %>
        <% else %>
            <%= link_to "Login", new_user_session_path, class: "text-[var(--accent)]" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "text-[var(--accent)]" %>
        <% end %>
    </nav>
</header>