<article class="product-card group flex flex-col overflow-hidden rounded-2xl border border-white/10 bg-white/5 shadow-lg transition hover:-translate-y-1 hover:shadow-2xl <%= [size_classes, classes].reject(&:blank?).join(" ") %>">
    <div class="relative aspect-square w-full overflow-hidden bg-slate-200">
        <%# image_tag cover_image, alt: cover_alt, class: "h-full w-full object-cover transition duration-500 group-hover:scale-105" %>

        <div class="absolute right-4 top-4 flex flex-col items-end gap-2 text-sm font-semibold uppercase tracking-wide">
            <span class="rounded-full px-3 py-1 text-xs <%= condition_classes %>"><%= condition_label %></span>
            <span class="rounded-full bg-white/80 px-3 py-1 text-xs text-slate-900 shadow-sm">
                <%= image_tag format_icon, alt: format_label, class: "inline h-4 w-4 mr-1" %> <%= format_label %>
            </span>
        </div>
    </div>

    <div class="flex flex-1 flex-col gap-3 p-4">
        <div class="space-y-1">
            <p class="text-xs font-semibold uppercase tracking-[0.25em] text-slate-500"><%= artist_name %></p>
            <h3 class="text-2xl font-semibold text-slate-900"><%= album_name %></h3>
        </div>

        <% if product_description.present? %>
        <p class="line-clamp-3 text-sm leading-relaxed text-slate-600"><%= product_description %></p>
        <% end %>

        <div class="mt-auto flex items-center justify-between">
            <% if price_tag.present? %>
            <span class="text-lg font-semibold text-slate-900"><%= price_tag %></span>
            <% end %>

            <%= link_to "Ver detalle", cta_path, class: "rounded-full bg-black px-4 py-2 text-sm font-semibold text-white transition hover:bg-slate-700" %>
        </div>
    </div>
</article>