<% content_for :title, "Mi perfil" %>

<section class="w-full px-4 py-12 md:py-16">
    <div class="mx-auto flex w-full max-w-5xl flex-col gap-8">
        <header class="space-y-2 text-center">
            <p class="text-xs uppercase tracking-[0.35em] text-slate-500">Cuenta</p>
            <h1 class="text-4xl font-semibold text-slate-900">Tu perfil</h1>
            <p class="text-sm text-slate-500">Revisá tus datos personales y mantenelos actualizados.</p>
        </header>

        <div class="grid gap-8 lg:grid-cols-[minmax(0,1.2fr)_minmax(0,1.5fr)]">
            <div class="space-y-6">
                <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
                    <div class="flex flex-col items-center gap-4 text-center">
                        <div class="flex h-20 w-20 items-center justify-center rounded-full bg-(--accent)/10 text-2xl font-bold text-(--accent)">
                            <%= (@user.name.presence || @user.email).first.upcase %>
                        </div>
                        <div>
                            <p class="text-lg font-semibold text-slate-900"><%= [@user.name, @user.last_name].select(&:present?).join(" ").presence || "Sin nombre" %></p>
                            <p class="text-sm text-slate-500"><%= @user.email %></p>
                        </div>
                    </div>

                    <dl class="mt-8 space-y-4 text-sm text-slate-600">
                        <div class="flex items-center justify-between border-b border-slate-100 pb-3">
                            <dt class="font-medium text-slate-500">Rol</dt>
                            <dd class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-slate-600">
                                <%= @user.role.present? ? @user.role.humanize : "Sin rol" %>
                            </dd>
                        </div>
                        <div class="flex items-center justify-between border-b border-slate-100 pb-3">
                            <dt class="font-medium text-slate-500">Miembro desde</dt>
                            <dd><%= l(@user.created_at, format: :long) rescue @user.created_at.to_s(:long) %></dd>
                        </div>
                        <div class="flex items-center justify-between">
                            <dt class="font-medium text-slate-500">Última actualización</dt>
                            <dd><%= l(@user.updated_at, format: :long) rescue @user.updated_at.to_s(:long) %></dd>
                        </div>
                    </dl>
                </div>
            </div>

            <div class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm">
                <h2 class="text-2xl font-semibold text-slate-900">Editar datos</h2>
                <p class="text-sm text-slate-500">Actualizá tu información personal y credenciales.</p>

                <%= form_with model: @user, url: profile_path, method: :patch, data: { turbo: false }, class: "mt-6 space-y-5" do |form| %>
                <% if @user.errors.any? %>
                <div class="rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-700">
                    <p class="font-semibold"><%= pluralize(@user.errors.count, "error") %> impidieron guardar los cambios:</p>
                    <ul class="mt-2 list-disc space-y-1 pl-5">
                        <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
                <% end %>

                <div class="space-y-2">
                    <%= form.label :name, class: "text-sm font-medium text-slate-700" %>
                    <%= form.text_field :name, class: "w-full rounded-2xl border border-slate-200 px-4 py-2 text-sm shadow-sm focus:border-(--accent) focus:outline-none focus:ring-2 focus:ring-(--accent)/40" %>
                </div>

                <div class="space-y-2">
                    <%= form.label :last_name, class: "text-sm font-medium text-slate-700" %>
                    <%= form.text_field :last_name, class: "w-full rounded-2xl border border-slate-200 px-4 py-2 text-sm shadow-sm focus:border-(--accent) focus:outline-none focus:ring-2 focus:ring-(--accent)/40" %>
                </div>

                <div class="space-y-2">
                    <%= form.label :email, class: "text-sm font-medium text-slate-700" %>
                    <%= form.email_field :email, class: "w-full rounded-2xl border border-slate-200 px-4 py-2 text-sm shadow-sm focus:border-(--accent) focus:outline-none focus:ring-2 focus:ring-(--accent)/40" %>
                </div>

                <div class="space-y-2">
                    <div class="flex items-center justify-between">
                        <%= form.label :password, class: "text-sm font-medium text-slate-700" %>
                        <span class="text-xs text-slate-400">Dejalo en blanco para mantenerlo</span>
                    </div>
                    <%= form.password_field :password, autocomplete: "new-password", class: "w-full rounded-2xl border border-slate-200 px-4 py-2 text-sm shadow-sm focus:border-(--accent) focus:outline-none focus:ring-2 focus:ring-(--accent)/40" %>
                </div>

                <div class="space-y-2">
                    <%= form.label :password_confirmation, class: "text-sm font-medium text-slate-700" %>
                    <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-2xl border border-slate-200 px-4 py-2 text-sm shadow-sm focus:border-(--accent) focus:outline-none focus:ring-2 focus:ring-(--accent)/40" %>
                </div>

                <div class="flex flex-wrap gap-3">
                    <%= save_button(classes: "text-sm font-semibold bg-(--accent) text-white rounded-full px-4 py-2 transition hover:scale-105 cursor-pointer") %>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</section>