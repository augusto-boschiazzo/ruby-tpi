<%= form_with(model: sale, class: "contents", data: { controller: "item-sales" }) do |form| %>
  <% if sale.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(sale.errors.count, "error") %> prohibited this sale from being saved:</h2>
      <ul class="list-disc ml-6">
        <% sale.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :client_id, "Cliente" %>
    <%= form.collection_select :client_id, Client.all, :id, :name, { prompt: "Seleccionar cliente" }, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :user_id, "Vendedor" %>
    <%= form.collection_select :user_id, User.all, :id, :name, { prompt: "Seleccionar vendedor" }, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
  </div>

  <h2 class="text-lg font-bold mb-2">Productos vendidos</h2>

  <div data-item-sales-target="container">
    <%= form.fields_for :item_sales do |item_form| %>
      <div class="nested-fields border p-4 rounded bg-gray-50 mb-4">
        <%= item_form.collection_select :product_id, Product.all, :id, :name, { prompt: "Seleccionar producto" }, class: "border rounded p-2 w-full" %>
        <%= item_form.number_field :quantity, min: 1, placeholder: "Cantidad", class: "border rounded p-2 w-full mt-2" %>
        <%= item_form.number_field :unit_price, step: 0.01, placeholder: "Precio unitario", class: "border rounded p-2 w-full mt-2" %>
        <%= item_form.hidden_field :_destroy %>
        <button type="button" data-action="item-sales#removeItem" class="bg-red-600 text-white px-2 py-1 rounded mt-2">Eliminar</button>
      </div>
    <% end %>
  </div>

  <div id="item-template" data-item-sales-target="template" class="hidden">
    <%= form.fields_for :item_sales, ItemSale.new, child_index: "NEW_RECORD" do |item_form| %>
      <div class="nested-fields border p-4 rounded bg-gray-100 mb-4">
        <%= item_form.collection_select :product_id, Product.all, :id, :name, { prompt: "Seleccionar producto" }, class: "border rounded p-2 w-full" %>
        <%= item_form.number_field :quantity, min: 1, placeholder: "Cantidad", class: "border rounded p-2 w-full mt-2" %>
        <%= item_form.number_field :unit_price, step: 0.01, placeholder: "Precio unitario", class: "border rounded p-2 w-full mt-2" %>
        <%= item_form.hidden_field :_destroy %>
        <button type="button" data-action="item-sales#removeItem" class="bg-red-600 text-white px-2 py-1 rounded mt-2">Eliminar</button>
      </div>
    <% end %>
  </div>

  <button type="button" data-action="item-sales#addItem" class="bg-blue-600 text-white px-3 py-1 rounded mb-4">
    Agregar producto
  </button>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
