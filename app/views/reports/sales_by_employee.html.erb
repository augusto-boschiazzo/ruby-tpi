<h1 class="text-2xl font-bold mb-4">Ventas por empleado</h1>

<table class="min-w-full bg-white border border-gray-200 rounded-md overflow-hidden mb-6">
  <thead class="bg-gray-100">
    <tr>
      <th class="px-4 py-2 text-left">Empleado</th>
      <th class="px-4 py-2 text-left">Cantidad de ventas</th>
      <th class="px-4 py-2 text-left">Total facturado</th>
    </tr>
  </thead>
  <tbody>
    <% @sales_by_user.each do |name, total| %>
      <tr class="border-t">
        <td class="px-4 py-2"><%= name %></td>
        <td class="px-4 py-2"><%= @count_by_user[name] %></td>
        <td class="px-4 py-2"><%= number_to_currency(total) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="w-full">
  <%= bar_chart @sales_by_user, xtitle: "Empleado", ytitle: "Total facturado" %>
</div>


