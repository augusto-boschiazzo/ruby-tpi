<div id="<%= dom_id sale %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Sold at:</strong>
    <%= sale.sold_at %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Total amount:</strong>
    <%= sale.total_amount %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Client:</strong>
    <%= sale.client_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">User:</strong>
    <%= sale.user_id %>
  </div>
</div>
