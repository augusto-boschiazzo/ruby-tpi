<% content_for :title, "Reporte de ventas por mes" %>

<section class="w-full px-6 py-10">
  <div class="mx-auto flex max-w-6xl flex-col gap-6">
    <header class="flex flex-col gap-2 border-b border-slate-200 pb-4">
      <p class="text-xs uppercase tracking-[0.35em] text-slate-500">Administración</p>
      <div class="flex items-center justify-between">
        <h1 class="text-3xl font-semibold text-slate-900">Reporte de ventas por mes</h1>
        <p class="text-sm text-slate-500">Visualizá la cantidad de ventas y el total facturado agrupado por mes.</p>
      </div>
    </header>

    <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm">
      <div class="scrollbar-thin overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-200 text-sm">
          <thead class="bg-slate-50 text-left text-xs font-semibold uppercase tracking-widest text-slate-500">
            <tr>
              <th class="px-6 py-3">Mes</th>
              <th class="px-6 py-3">Cantidad de ventas</th>
              <th class="px-6 py-3">Total facturado</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100 bg-white">
            <% @sales_by_month.each do |month, count| %>
              <tr class="hover:bg-slate-50">
                <td class="px-6 py-4 font-medium text-slate-900"><%= month %></td>
                <td class="px-6 py-4 text-slate-700"><%= count %></td>
                <td class="px-6 py-4 font-medium text-slate-900"><%= number_to_currency(@amount_by_month[month]) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm p-6">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">Cantidad de ventas por mes</h2>
      <%= line_chart @sales_by_month,
            xtitle: "Mes",
            ytitle: "Cantidad de ventas",
            library: { backgroundColor: "transparent" } %>
    </div>

    <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm p-6">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">Total facturado por mes</h2>
      <%= column_chart @amount_by_month,
            xtitle: "Mes",
            ytitle: "Total facturado",
            library: { backgroundColor: "transparent" } %>
    </div>
  </div>
</section>
