<% content_for :title, "Top productos vendidos" %>

<section class="w-full px-6 py-10">
  <div class="mx-auto flex max-w-6xl flex-col gap-6">
    <header class="flex flex-col gap-2 border-b border-slate-200 pb-4">
      <p class="text-xs uppercase tracking-[0.35em] text-slate-500">Administraci칩n</p>
      <div class="flex items-center justify-between">
        <h1 class="text-3xl font-semibold text-slate-900">Top productos vendidos</h1>
        <p class="text-sm text-slate-500">Visualiz치 los productos m치s vendidos y su cantidad total.</p>
      </div>
    </header>

    <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm">
      <div class="scrollbar-thin overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-200 text-sm">
          <thead class="bg-slate-50 text-left text-xs font-semibold uppercase tracking-widest text-slate-500">
            <tr>
              <th class="px-6 py-3">Producto</th>
              <th class="px-6 py-3">Cantidad vendida</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-100 bg-white">
            <% @top_products.each do |name, qty| %>
              <tr class="hover:bg-slate-50">
                <td class="px-6 py-4 font-medium text-slate-900"><%= name %></td>
                <td class="px-6 py-4 text-slate-700"><%= qty %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm p-6">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">Distribuci칩n de ventas</h2>
      <%= pie_chart @top_products,
            donut: true,
            legend: true,
            library: { backgroundColor: "transparent" } %>
    </div>
  </div>
</section>

