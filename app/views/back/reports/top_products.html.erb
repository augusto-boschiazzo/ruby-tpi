<h1 class="text-2xl font-bold mb-4">Top productos vendidos</h1>

<table class="min-w-full bg-white border border-gray-200 rounded-md overflow-hidden mb-6">
  <thead class="bg-gray-100">
    <tr>
      <th class="px-4 py-2 text-left">Producto</th>
      <th class="px-4 py-2 text-left">Cantidad vendida</th>
    </tr>
  </thead>
  <tbody>
    <% @top_products.each do |name, qty| %>
      <tr class="border-t">
        <td class="px-4 py-2"><%= name %></td>
        <td class="px-4 py-2"><%= qty %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="w-full">
  <%= pie_chart @top_products, donut: true, legend: true %>
</div>


