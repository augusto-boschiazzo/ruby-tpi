<% content_for :title, "Productos" %>

<section class="w-full px-6 py-10">
    <div class="mx-auto flex max-w-6xl flex-col gap-6">
        <header class="flex flex-col gap-2 border-b border-slate-200 pb-4">
            <p class="text-xs uppercase tracking-[0.35em] text-slate-500">Administración</p>
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div>
                    <h1 class="text-3xl font-semibold text-slate-900">Productos</h1>
                    <p class="text-sm text-slate-500">Listá, buscá y administrá los productos de la plataforma.</p>
                </div>
                <% if policy(Product).new? %>
                <%= new_button(new_admin_product_path, classes: "inline-flex items-center gap-2 rounded-full bg-(--accent) px-5 py-2 text-sm font-semibold text-white shadow transition hover:brightness-110") %>
                <% end %>
            </div>
        </header>

        <%= form_with url: admin_products_path, method: :get, local: true, class: "flex flex-wrap items-end gap-4" do |form| %>
        <div class="flex flex-col gap-2">
            <%= form.label :query, "Buscar por nombre", class: "text-sm font-medium text-slate-700" %>
            <%= form.text_field :query, value: @query, placeholder: "Nombre del producto", class: "w-72 rounded-xl border border-slate-200 px-4 py-2 text-sm text-slate-900 shadow-sm focus:border-(--accent) focus:outline-none focus:ring-2 focus:ring-(--accent)/40" %>
        </div>
        <div class="flex flex-col gap-2">
            <%= form.label :per_page, "Resultados por página", class: "text-sm font-medium text-slate-700" %>
            <%= form.select :per_page, options_for_select([[10, 10], [15, 15], [25, 25], [50, 50]], @per_page), {}, class: "rounded-xl border border-slate-200 px-4 py-2 text-sm text-slate-900 shadow-sm focus:border-(--accent) focus:outline-none focus:ring-2 focus:ring-(--accent)/40" %>
        </div>
        <div class="flex gap-3">
            <%= form.submit "Aplicar filtros", class: "mt-6 rounded-full bg-slate-900 px-6 py-2 text-sm font-semibold text-white transition hover:bg-slate-700" %>
            <% if @query.present? || params[:per_page].present? %>
            <%= link_to "Limpiar", admin_products_path, class: "mt-6 rounded-full border border-slate-300 px-6 py-2 text-sm font-semibold text-slate-600 hover:bg-slate-50" %>
            <% end %>
        </div>
        <% end %>

        <% if @products.any? %>
        <div class="overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm">
            <div class="scrollbar-thin overflow-x-auto">
                <table class="min-w-full divide-y divide-slate-200 text-sm">
                    <thead class="bg-slate-50 text-left text-xs font-semibold uppercase tracking-widest text-slate-500">
                        <tr>
                            <th scope="col" class="px-6 py-3">Nombre</th>
                            <th scope="col" class="px-6 py-3">Autor</th>
                            <th scope="col" class="px-6 py-3">Precio</th>
                            <th scope="col" class="px-6 py-3">Tipo</th>
                            <th scope="col" class="px-6 py-3">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100 bg-white">
                        <% @products.each do |product| %>
                        <tr class="hover:bg-slate-50">
                            <td class="px-6 py-4 font-medium text-slate-900">
                                <%= product.name.presence || "Sin nombre" %>
                            </td>
                            <td class="px-6 py-4 text-slate-700">
                                <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-slate-600">
                                    <%= product.author.present? ? product.author.humanize : "Sin autor" %>
                                </span>
                            </td>
                            <td class="px-6 py-4 font-medium text-slate-900"><%= product.price.present? ? number_to_currency(product.price) : "Sin precio" %></td>
                            <td class="px-6 py-4 text-slate-700">
                                <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-slate-600">
                                    <% if product.product_type.present? %>
                                    <span class="text-xs text-slate-500">
                                        <%= product.product_type.humanize || "Sin tipo" %>
                                    </span>
                                    <% if product.vinyl? %>
                                    <%= image_tag "svg/vinyl.svg", alt: "Vinilo", class: "inline h-4 w-4 mr-1" %>
                                    <% elsif product.cd? %>
                                    <%= image_tag "svg/cd.svg", alt: "CD", class: "inline h-4 w-4 mr-1" %>
                                    <% end %>
                                    <% else %>
                                    Sin tipo
                                    <% end %>
                                </span>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <div class="inline-flex gap-2">
                                    <%= show_button([:admin, product], classes: "rounded-full border border-slate-300 px-3 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-100") %>
                                    <%= edit_button(edit_admin_product_path(product), classes: "rounded-full border border-slate-300 px-3 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-100") %>
                                    <%= destroy_button([:admin, product], classes: "rounded-full border border-red-600 bg-red-500 px-3 py-1 text-xs font-semibold text-white hover:bg-red-400") %>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <div class="border-t border-slate-200 bg-slate-50 px-6 py-4">
                <%= paginate @products %>
            </div>
        </div>
        <% else %>
        <div class="rounded-2xl border border-dashed border-slate-200 bg-white/80 p-10 text-center text-slate-500">
            <p class="text-lg font-semibold">No encontramos productos</p>
            <% if @query.present? %>
            <p class="mt-2 text-sm">Probá ajustando la búsqueda por nombre.</p>
            <% else %>
            <p class="mt-2 text-sm">Todavía no hay productos registrados.</p>
            <% end %>
        </div>
        <% end %>
    </div>
</section>